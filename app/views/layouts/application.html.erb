<!DOCTYPE html>
<html>
<head>
  <title>Pickem</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
    <div class="user_nav" style="float: right">
      <span><%= link_to current_user.username, edit_user_path(current_user) %></span>
      <span style="float: right"><%= button_to "Sign out", session_path, method: :delete %></span>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
